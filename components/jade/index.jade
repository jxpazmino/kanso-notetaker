doctype html
html
    include ./includes/head
    body
        //notes list / search / settings panel
        section#notespanel
            .header
                ul
                    li.selected
                        a(href="#")
                            span.glyphicon.glyphicon-notes
                            span.tooltiptext Notes
                    li
                        a(href="#")
                            span.glyphicon.glyphicon-search
                            span.tooltiptext Search
                    li
                        a(href="#")
                            span.glyphicon.glyphicon-tag
                            span.tooltiptext Tags
                    li
                        a(href="#")
                            span.glyphicon.glyphicon-cogwheel
                            span.tooltiptext Preferences
            .newnote
                .btn New Note
            .body
                .note
                    h3 Note Title ippet ksldjf lsk sdlfks 
                    p note snippet ksldjf lsk djflssldkjf laks dlfaksj dflkasjdflkas djflaks ...
                    ul
                        li.tag: span Work
                        li.tag: span programming
                .note.selected
                    h3 Note Title
                    p note snippet 1234567890-1234567890-1234567890-lssldkjf laks dlfaksj dflkasj dflkas djflaks ...
                    span.date May 3, 2016
                .note
                    h3 Note Title something else goes ehre
                    p note snippet 1234567890-1234567890-1234567890-lssldkjf laks dlfaksj dflkasj dflkas djflaks ...
                    p 03/25/2016
                .note
                    h3 Untitled
                    p note snippet...
                    ul
                        li.tag: span Work
                        li.tag: span !
                        li.tag: span cooking
                .note
                    h3 Movies
                    p this is a movie note...
                    ul
                        li.tag: span Movies
                        li.tag: span haha
                .note
                    h3 Note Title
                    p note snippet...
                    ul
                        li.tag: span Work
                        li.tag: span Reading
                        li.tag: span ha
                        li.tag: span you
        //note preview
        section#notesedit
            .header
                a(href="#"): span.glyphicon.glyphicon-show_lines
                ul
                    li.tag Tag1
                    li.tag Tag2
            .body
                input(placeholder="Add a title..." value="Untitled")
                div.content(contenteditable="true" data-text="Enter text here")
        
        //notes info
        section#notesinfo
            .header
                span.glyphicon.glyphicon-circle_info
                span.glyphicon.glyphicon-justify
                span.glyphicon.glyphicon-show_lines
            .body
                ul
                    li.btn Publish
                    li.btn Share
                    li.btn Delete
                    