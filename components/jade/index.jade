                        li.tag: span you
        //note preview
        section#notesview
            .header
                a(href="#"): span.glyphicon.glyphicon-show_lines
                ul
                    li.tag Tag1
                    li.tag Tag2
            .body
                input(placeholder="Add a title..." value="Untitled")
                div.content(contenteditable="true" data-text="Enter text here")
        
        //notes info
        section#notesinfo
            .header
                span.glyphicon.glyphicon-circle_info
                span.glyphicon.glyphicon-justify
                span.glyphicon.glyphicon-show_lines
            .body
                ul
                    li.btn Publish
                    li.btn Share
                    li.btn Delete
                    