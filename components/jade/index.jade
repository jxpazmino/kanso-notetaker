doctype html
html
    include ./includes/head
    body
        //notes list / search / settings panel
        section#notespanel
            .header
                ul
                    li.selected: a(href="#"): span.glyphicon.glyphicon-notes
                    li: a(href="#"): span.glyphicon.glyphicon-search
                    li: a(href="#"): span.glyphicon.glyphicon-tag
                    li: a(href="#"): span.glyphicon.glyphicon-cogwheel
            .newnote
                .btn New Note
            .body
                .note
                    h3 Note Title ippet ksldjf lsk sdlfks 
                    p note snippet ksldjf lsk djflssldkjf laks dlfaksj dflkasjdflkas djflaks ...
                    ul
                        li.tag: span Work
                        li.tag: span programming
                .note.selected
                    h3 Note Title
                    p note snippet 1234567890-1234567890-1234567890-lssldkjf laks dlfaksj dflkasj dflkas djflaks ...
                    ul
                        li.tag: span programming
                        li.tag: span Web development
                .note
                    h3 Untitled
                    p note snippet...
                    ul
                        li.tag: span Work
                        li.tag: span !
                        li.tag: span cooking
                .note
                    h3 Movies
                    p this is a movie note...
                    ul
                        li.tag: span Movies
                        li.tag: span haha
                .note
                    h3 Note Title
                    p note snippet...
                    ul
                        li.tag: span Work
                        li.tag: span Reading
